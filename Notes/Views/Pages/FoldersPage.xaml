<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:Notes.Helpers"
             x:Class="Notes.Views.Pages.FoldersPage"
             Title="Folders">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddFolderClicked" IconImageSource="{FontImage FontFamily=MaterialIcons, Glyph={x:Static helpers:MaterialIconCodes.Add}}" />
        <ToolbarItem Text="..." Clicked="OnMenuClicked" IconImageSource="{FontImage FontFamily=MaterialIcons, Glyph=&#xe5d4;}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="*">
        <CollectionView x:Name="FoldersCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnFolderSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" ColumnDefinitions="Auto,*">
                        <Label Grid.Column="0"
                               Text="{x:Static helpers:MaterialIconCodes.Folder}"
                               FontFamily="MaterialIcons"
                               FontSize="24"
                               VerticalOptions="Center" />
                        <Label Grid.Column="1"
                               Text="{Binding Name}"
                               FontSize="16"
                               VerticalOptions="Center"
                               Margin="10,0,0,0" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>