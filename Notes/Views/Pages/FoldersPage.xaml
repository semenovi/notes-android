<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:Notes.Helpers"
             x:Class="Notes.Views.Pages.FoldersPage"
             Title="Folders">

    <Grid>
        <CollectionView x:Name="FoldersCollection"
                      SelectionMode="Single"
                      SelectionChanged="OnFolderSelectionChanged">
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No folders yet" FontSize="18" HorizontalOptions="Center" TextColor="Gray" />
                    <Label Text="Create your first folder" FontSize="14" HorizontalOptions="Center" TextColor="Gray" />
                </StackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="{x:Static helpers:MaterialIconCodes.Folder}" 
                               FontFamily="MaterialIcons" 
                               FontSize="24" 
                               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                               VerticalOptions="Center" />
                        <Label Grid.Column="1" 
                               Text="{Binding Name}" 
                               FontSize="18" 
                               VerticalOptions="Center" 
                               Margin="15,0,0,0" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button x:Name="AddFolderButton"
                Text="{x:Static helpers:MaterialIconCodes.Add}"
                FontFamily="MaterialIcons"
                FontSize="24"
                CornerRadius="30"
                WidthRequest="60"
                HeightRequest="60"
                Padding="0"
                VerticalOptions="End"
                HorizontalOptions="End"
                Margin="0,0,20,20"
                Clicked="OnAddFolderClicked" />
    </Grid>
</ContentPage>