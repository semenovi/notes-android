<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Notes"
             xmlns:converters="clr-namespace:Notes.Converters"
             x:Class="Notes.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->
            <Color x:Key="AppPrimary">#4caf50</Color>
            <Color x:Key="AppSecondary">#8bc34a</Color>
            <Color x:Key="AppBackground">#f5f5f5</Color>
            <Color x:Key="AppText">#212121</Color>
            <Color x:Key="AppAccent">#ff5722</Color>

            <!-- Converters -->
            <converters:BoolToFontAttributesConverter x:Key="BoolToFontAttributesConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>